@model ProductViewModel

@{
    ViewData["Title"] = "Delete Product";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <h2>Delete Product</h2>
        <h3>Are you sure you want to delete this product?</h3>
        <div>
            <h4>@Model.Name</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Price</dt>
                <dd class="col-sm-10">@Model.Price</dd>
                <dt class="col-sm-2">Supplier</dt>
                <dd class="col-sm-10">@Model.Supplier</dd>
                <dt class="col-sm-2">Count</dt>
                <dd class="col-sm-10">@Model.Count</dd>
            </dl>
        </div>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="AllProducts" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>

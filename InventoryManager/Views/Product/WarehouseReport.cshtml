@model IEnumerable<InventoryManager_Data.ViewModels.WarehouseReportViewModel>

@{
    ViewData["Title"] = "Warehouse Report";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/warehouse-report.css" />
</head>
<body>
    <div class="container">
        <h2>Warehouse Report</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Value</th>
                    <th>Supplier</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Count</td>
                        <td>@item.Value</td>
                        <td>@item.Supplier</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
